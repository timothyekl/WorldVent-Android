<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_worldvent">

    <fragment
        android:id="@+id/navigation_worldvent"
        android:name="com.timekl.worldvent.ui.worldwent.WorldVentFragment"
        android:label="@string/nav_worldvent"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/navigation_controls"
        android:name="com.timekl.worldvent.ui.controls.ControlsFragment"
        android:label="@string/nav_controls"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/navigation_glossary"
        android:name="com.timekl.worldvent.ui.glossary.GlossaryFragment"
        android:label="@string/nav_glossary"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.timekl.worldvent.ui.settings.SettingsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>